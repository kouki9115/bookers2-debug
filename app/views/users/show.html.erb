<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%#= render 'info', user: @user %>
       <table class='table'>
  <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= @user.follower.count %></th>
  </tr>
    <tr>
	  <th>followers</th>
	  <th><%= @user.followed.count %></th>
  </tr>

</table>

<div class='row'>
  <% if user_signed_in? %>
            <% @users.each do |user| %>
            <p><% if current_user.following?(user) %>
               <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST,class: "btn btn-outline-secondary btn-block "  %>
               <% else %>
               <%= link_to 'フォローする', follow_path(user.id), method: :POST,class: "btn btn-outline-secondary btn-block "  %>
               <% end %>
            </p>
               <% end %>
               <% end %>

</div>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>